<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <link rel="shortcut icon" href="/favicon.ico" />
    <title name="title">@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/weui.min.css">
    <link rel="stylesheet" href="~/Content/css/example.css">
    @RenderSection("css", required: false)
</head>
<body ontouchstart="">
    <div class="weui-toptips weui-toptips_warn js_tooltips">错误提示</div>
    <div class="container" id="container">
        <div id="scroller">
            <div class="page js_show">
                <div class="page__bd" style="height: 100%;">
                    <div class="weui-tab">
                        <div class="weui-tab__panel">
                            @RenderBody()
                        </div>
                    </div>
                    <div class="weui-tabbar">
                        <a href="/L/Index?lId=2" class="weui-tabbar__item @{ @(ViewBag.lId == 2 ? "current_tabbar" : "")}">

                            <p class="weui-tabbar__label tabbar ">山东</p>
                        </a>
                        <a href="/L/Index?lId=3" class="weui-tabbar__item  @{ @(ViewBag.lId == 3 ? "current_tabbar" : "")}">

                            <p class="weui-tabbar__label tabbar ">广东</p>
                        </a>
                        <a href="/L/Index?lId=4" class="weui-tabbar__item @{ @(ViewBag.lId == 4 ? "current_tabbar" : "")}">

                            <p class="weui-tabbar__label tabbar ">上海</p>
                        </a>
                    </div>
                </div>
            </div>

            <div id="toast" style="opacity: 0; display: none;">
                <div class="weui-mask_transparent"></div>
                <div class="weui-toast">
                    <i class="weui-icon-success-no-circle weui-icon_toast"></i>

                    <p class="weui-toast__content">已完成</p>
                </div>
            </div>

        </div>
    </div>
    <script type="text/javascript" src="~/Content/js/jquery-2.2.2.min.js"></script>

    @RenderSection("scripts", required: false)
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?e1019947792a76990a8a2f6167e6f2cb";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
</body>
</html>
